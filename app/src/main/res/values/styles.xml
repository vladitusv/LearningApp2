<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.Custom</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionbarTabText</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.Solid.Custom" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/button_material_dark</item>
        <item name="displayOptions">showHome|showCustom|useLogo|showTitle</item>
    </style>

    <style name="MyActionbarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/background_material_light</item>
    </style>

    <style name="ToolbarMaterialTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


</resources>
